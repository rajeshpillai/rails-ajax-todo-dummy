<p id="notice"><%= notice %></p>

<h1>Tasks</h1>


<div class="task-form">
  <%= render 'form', task: @task %>
</div>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Completed</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="task-items">
    <% @tasks.each do |task| %>
     <%= render task%>
    <% end %>
  </tbody>
</table>


